{% extends "base.html.twig" %}
{% block title %}
    Save film
                
            
        
    
{% endblock %}

{% block body %}
    <body>
        <div class="jumbotron text-center">
            <h1>
                Visualiser vos films vus et non vus
                                        
                            
            </h1>
        </div>

        <form>
            <div class="form-group">
                {{ form_start(form) }}
                <label for="exampleInputEmail1">
                    Titre :
                                    
                </label>
                {{ form_widget(form.name) }}
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">
                    Synopsis :
                                    
                </label>
                {{ form_widget(form.synopsis) }}
            </div>
            <div class="form-check">
                <label class="form-check-label" for="exampleCheck1">
                <p> Votre film est vu si la checkbox  est coché  et pas vu si la checkbox n'est pas cochée</br>
                entrer dans l'url l'identifiant 1 pour visualisez un film non vu</br>
                entrer dans l'url l'identifiant 3 et 4 pour  visualiser un film vu</p>
                
               
                                    
                </label>
            </br>
            {{ form_widget(form.seen) }}

        </div>
        <br></br>
        <div>
            {{ form_widget(form.save) }}
        </div>
        {{ form_end(form) }}
    </form>
</body></html>{% endblock %}